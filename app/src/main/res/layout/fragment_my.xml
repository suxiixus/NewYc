<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@mipmap/icon_my_top_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="@dimen/font_lager" />

        <ImageView
            android:id="@+id/ivSet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@mipmap/icon_my_set" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-160dp"
        android:background="@mipmap/icon_my_top_bg_white"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:id="@+id/llMyTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.app.youcheng.widget.CircleImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/icon_my_header" />

                <ImageView
                    android:id="@+id/ivStyle"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="-8dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击登录"
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***"
                        android:textColor="@color/font_main_black"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tvUserType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="***"
                        android:textColor="@color/font_main_black"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:orientation="horizontal">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="企业金额"-->
                <!--android:textColor="@color/font_main_gray"-->
                <!--android:textSize="@dimen/font_small" />-->

                <!--<TextView-->
                <!--android:id="@+id/tvAccountMoney"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:text="0"-->
                <!--android:textColor="@color/font_main_black"-->
                <!--android:textSize="@dimen/font_small" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center"-->
            <!--android:text="充值金额"-->
            <!--android:textColor="@color/font_main_gray"-->
            <!--android:textSize="@dimen/font_small" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="赠送金额"
                android:textColor="@color/font_main_gray"
                android:textSize="@dimen/font_small" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="企业分值"
                    android:textColor="@color/font_main_gray"
                    android:textSize="@dimen/font_small" />

                <ImageView
                    android:id="@+id/ivFen"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:src="@mipmap/icon_wenhao_blue" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center"-->
            <!--android:text="0"-->
            <!--android:textColor="@color/font_main_black"-->
            <!--android:textSize="@dimen/font_small" />-->

            <TextView
                android:id="@+id/tvSendMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/font_main_black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tvCompanyRank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/font_main_black"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout style="@style/layout_my_item">

                    <ImageView
                        style="@style/image_view_my_item"
                        android:src="@mipmap/icon_yaoqing" />

                    <TextView
                        style="@style/text_view_my_item"
                        android:text="邀请企业注册" />

                    <ImageView style="@style/next_black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/icon_my_share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llFirmSet"
                        style="@style/layout_my_item">

                        <ImageView
                            style="@style/image_view_my_item"
                            android:src="@mipmap/icon_my_write" />

                        <TextView
                            style="@style/text_view_my_item"
                            android:text="企业信息完善" />

                        <ImageView style="@style/next_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMsg"
                        style="@style/layout_my_item">

                        <ImageView
                            style="@style/image_view_my_item"
                            android:src="@mipmap/icon_my_chenx" />

                        <TextView
                            style="@style/text_view_my_item"
                            android:text="企业诚信" />

                        <ImageView style="@style/next_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFirmAccount"
                        style="@style/layout_my_item">

                        <ImageView
                            style="@style/image_view_my_item"
                            android:src="@mipmap/icon_my_account" />

                        <TextView
                            style="@style/text_view_my_item"
                            android:text="账号管理" />

                        <ImageView style="@style/next_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBill"
                        style="@style/layout_my_item">

                        <ImageView
                            style="@style/image_view_my_item"
                            android:src="@mipmap/icon_my_bill" />

                        <TextView
                            style="@style/text_view_my_item"
                            android:text="消费记录" />

                        <ImageView style="@style/next_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCard"
                        style="@style/layout_my_item">

                        <ImageView
                            style="@style/image_view_my_item"
                            android:src="@mipmap/icon_my_card" />

                        <TextView
                            style="@style/text_view_my_item"
                            android:text="我的卡包" />

                        <ImageView style="@style/next_black" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@mipmap/icon_my_bottom" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
