<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_20_corner"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="企业注销"
        android:textColor="@color/font_main_black"
        android:textSize="@dimen/font_lager" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="您正在进行企业注销，注销申请通过后您的账号将无法登录使用！是否确定此操作?"
        android:textColor="@color/font_main_black"
        android:textSize="@dimen/font_small" />

    <EditText
        android:id="@+id/etMsg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/main_bg"
        android:hint="输入注销原因"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/font_main_black"
        android:textColorHint="@color/font_hint"
        android:textSize="@dimen/font_small" />

    <View style="@style/line_bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_main_gray"
            android:textSize="@dimen/font_small" />

        <View style="@style/line_vertical_bg_gray" />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/font_blue"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>