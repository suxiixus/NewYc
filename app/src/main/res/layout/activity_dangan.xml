<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <!--标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5684FC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@mipmap/icon_back_white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="客户档案"
            android:textColor="@color/white"
            android:textSize="@dimen/font_lager"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/icon_dangan_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_white_5_corner"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/etFirmName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="输入企业全称"
            android:textColor="@color/font_main_black"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_small" />

        <View style="@style/line_bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etFirmNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="输入企业代码"
                android:textColor="@color/font_main_black"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tvSearch"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_white_5_corner"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="联系客户（账单及企业分值情况通知）"
            android:textColor="@color/font_main_black"
            android:textSize="@dimen/font_small" />

        <View style="@style/line_bg_gray" />

        <!--        <EditText-->
        <!--            android:id="@+id/etMan"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:background="@color/transparent"-->
        <!--            android:hint="联系人（必填）"-->
        <!--            android:textColor="@color/font_main_black"-->
        <!--            android:textColorHint="@color/font_hint"-->
        <!--            android:textSize="@dimen/font_small" />-->

        <!--        <View style="@style/line_bg_gray" />-->

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:hint="联系电话（必填）"
            android:inputType="number"
            android:textColor="@color/font_main_black"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSend"
        style="@style/btn_blue_option_no_state"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="提交审核" />

</LinearLayout>
