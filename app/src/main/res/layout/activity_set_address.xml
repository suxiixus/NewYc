<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_head" />

    <View style="@style/line_bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLabel"
            style="@style/layout_my_item">

            <TextView
                style="@style/text_view_firm_set_item"
                android:text="企业地址" />

            <EditText
                android:id="@+id/etTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入企业地址"
                android:singleLine="true"
                android:textColor="@color/font_main_black"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="是否对外显示" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_green_selector" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_bg" />
    </LinearLayout>

</LinearLayout>
