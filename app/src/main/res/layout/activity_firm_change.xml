<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_head" />

    <View style="@style/line_bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLogo"
            style="@style/layout_my_item">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:background="@color/main_bg"
                android:scaleType="fitXY" />

            <TextView style="@style/text_view_my_item" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout
            android:id="@+id/llLabel"
            style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="企业标签" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="账单确认收款设置" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认已付款"
                android:textColor="@color/font_main_gray"
                android:textSize="@dimen/font_small" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout
            android:id="@+id/llMan"
            style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="企业联系人" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout
            android:id="@+id/llPhone"
            style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="联系电话" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

        <LinearLayout
            android:id="@+id/llAddress"
            style="@style/layout_my_item">

            <TextView
                style="@style/text_view_my_item"
                android:text="企业地址" />

            <ImageView
                style="@style/next_black"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <View style="@style/line_bg_gray" />

    </LinearLayout>

</LinearLayout>
