<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--加载框-->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊，控制背景灰色显示不显示,false背景透明-->
    </style>

    <!--基础弹框-->
    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.6</item><!-- 灰度 -->
    </style>

    <!--横向灰色线条-->
    <style name="line_bg_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_bg_gray</item>
    </style>

    <!--竖向灰色线条-->
    <style name="line_vertical_bg_gray">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_bg_gray</item>
    </style>

    <!--首页底部tab栏布局-->
    <style name="layout_tab_bottom_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--首页底部tab栏字体-->
    <style name="tab_bottom_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/font_home_tab_color_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!--蓝色按钮样式,无状态变化-->
    <style name="btn_blue_option_no_state">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/shape_bg_normal_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!--灰色按钮样式,无状态变化-->
    <style name="btn_gray_option_no_state">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/shape_bg_normal_gary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!--我的页面item图片-->
    <style name="layout_my_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--我的页面item图片-->
    <style name="image_view_my_item">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--我的页面item文字-->
    <style name="text_view_my_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--修改页面item文字-->
    <style name="text_view_update_item">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--企业信息页面item文字-->
    <style name="text_view_firm_set_item">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--企业信息页面item文字right-->
    <style name="text_view_firm_set_item_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/font_main_gray</item>
    </style>

    <!--注册页面输入框-->
    <style name="edit_text_view_sign">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/font_main_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--添加企业员工页面输入框-->
    <style name="edit_text_view_add">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/font_main_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/font_main_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="layout_sign_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="next_black">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:src">@mipmap/icon_next</item>
    </style>

</resources>
